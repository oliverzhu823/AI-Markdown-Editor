{
  "extends": "@marktion/internal-recipe/typescript-config/react-library.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["../../packages/ui/src/components/*"],
      "@/libs/*": ["./libs/*"],
      "api/*": ["../api/src/*"]
    },
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
